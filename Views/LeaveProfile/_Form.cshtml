
@{
	string view = ViewData["form_class"].ToString();
}
<form id="form_LeaveProfile" action="/LeaveProfiles/1" accept-charset="UTF-8" method="post" novalidate="novalidate">
	<div class="col-12 col-md-9 col-lg-8">
		<div class="form-group">
			<label class="form-label">Leave Category*</label>
			<span class="desc"></span>
			<div class="controls">
				<select class="form-control" id="leave_profile_leave_category">
					<option selected="selected" value="Probationary">Probationary</option>
					<option value="Confirmed">Confirmed</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label class="form-label">Leave Type*</label>
			<span class="desc"></span>
			<div class="controls">
				<select class="form-control" id="leave_profile_leave_type_id">
					<option value="1">Casual Leave</option>
					<option selected="selected" value="2">Sick Leave</option>
					<option value="3">Earned Leave</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<div class="form-check">
				<input class="form-check-input" type="checkbox" value="1" checked="checked" id="leave_profile_is_active">
				<label class="form-check-label" for="leave_profile_is_active">Is Active</label>
			</div>
		</div>
	</div>
	<div class="col-12 col-md-9 col-lg-8 padding-bottom-30">
		<div class="text-left">
			<input type="submit" name="commit" value="Save" class="btn btn-primary" data-disable-with="Save">
				<a href="@Url.Action("List", "LeaveProfile")">
					<div type="button" class="btn">Cancel</div>
				</a>
		</div>
	</div>
</form>
