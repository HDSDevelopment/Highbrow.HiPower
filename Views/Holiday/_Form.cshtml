@using Highbrow.HiPower.Models
@model Holiday
@{
	string view = ViewData["form_class"].ToString();
}

@using (Html.BeginForm(view, "Holiday", FormMethod.Post, new { @class = "", enctype = "multipart/form-data", id = "form_Holiday" }))
{
	@*<form id="form_Holiday" action="/holidays/1" accept-charset="UTF-8" method="post" novalidate="novalidate">*@
	@Html.HiddenFor(m => m.Id)
	@Html.HiddenFor(m => m.CreatedAt)
<div class="col-12 col-md-9 col-lg-8">
	<div class="form-group">
		<label class="form-label" for="HolidayName">Name *</label>
		<span class="desc"></span>
		<div class="controls">
			@Html.EditorFor(m => m.HolidayName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Holiday Name", type = "text" } })
		</div>
	</div>
	<div class="form-group">
		<label class="form-label" for="HolidayDate">Date *</label>
		<span class="desc"></span>
		<div class="controls">
			@*<input class="form-control datepicker" type="text" id="HolidayDate" name="HolidayDate">*@
			@Html.EditorFor(m => m.HolidayDate, new { htmlAttributes = new { @class = "form-control datepicker", placeholder = "dd-mm-yyyy", type = "text"} })
		</div>
	</div>
</div>
	<div class="col-12 col-md-9 col-lg-8 padding-bottom-30">
		<div class="text-left">
			<input type="submit" name="commit" value="Save" class="btn btn-primary" data-disable-with="Save">
			<a href="@Url.Action("List", "Holiday")">
				<div type="button" class="btn">Cancel</div>
			</a>
		</div>
	</div>
	@*</form>*@
}
