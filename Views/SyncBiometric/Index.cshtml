@{ ViewData["Title"] = "Sync Biometric";
	ViewData["body_class"] = "sync_biometric";
	}


<!-- MAIN CONTENT AREA STARTS -->
<div class="col-12">
	<section class="box ">
		<header class="panel_header">
			<h2 class="title float-left">Employee Attendance Sync</h2>
		</header>
		<div class="content-body">
			<div class="row">
				<div class="col-12">
					<div id="portfolio" class="">
						<form action="/attendances/create_sync" accept-charset="UTF-8" method="post">
							<div class="form-row align-items-center">
								<div class="col-sm-3 my-1">
									<b>Month</b>
									<select class="form-control" name="month" id="month">
										<option value="">Please Select</option>
										<option value="January">January</option>
										<option value="February">February</option>
										<option value="March">March</option>
										<option value="April">April</option>
										<option value="May">May</option>
										<option value="June">June</option>
										<option value="July">July</option>
										<option value="August">August</option>
										<option value="September">September</option>
										<option value="October">October</option>
										<option value="November">November</option>
										<option value="December">December</option>
									</select>
								</div>
								<div class="col-sm-2 my-1">
									<b>Year</b>
									<select class="form-control" name="year" id="year">
										<option selected="selected" value="2020">2020</option>
										<option value="2019">2019</option>
										<option value="2018">2018</option>
									</select>
								</div>
								<div class="col-auto my-1">
									<br>
									<button name="button" type="submit" class="btn btn-primary" data-disable-with="Processing">Proceed</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>
<!-- MAIN CONTENT AREA ENDS -->