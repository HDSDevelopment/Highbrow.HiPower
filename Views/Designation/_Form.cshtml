
@using Highbrow.HiPower.ViewModels.DesignationVM
@model DesignationAddUpdateViewModel

@{
	string view = ViewData["form_class"].ToString();
}
@using (Html.BeginForm(view, "Designation", FormMethod.Post, new { @class = "", enctype = "multipart/form-data", id = "form_Designation" }))
{
	@*<form id="form_Designation" action="/Designations/1" accept-charset="UTF-8" method="post" novalidate="novalidate">*@
	@Html.HiddenFor(m => m.Id)
	@Html.HiddenFor(m => m.CreatedAt)
<div class="col-12 col-md-9 col-lg-8">

	<div class="form-group">
		<label class="form-label" for="DesignationName">Name *</label>
		<span class="desc"></span>
		<div class="controls">
			@Html.EditorFor(m => m.DesignationName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Designation Name", type = "text" } })
		</div>
	</div>
	<div class="form-group">
		<label class="form-label" for="designation_leave_approve_levels">Leave Approve Levels</label>
		<div class="controls">
			@*<select class="form-control" id="designation_leave_approve_levels">
				<option selected="selected" value="One">One</option>
				<option value="Two">Two</option>
			</select>*@
			<select id="LeaveApprovalLevel" asp-for="LeaveApprovalLevel" asp-items=@(new SelectList(Model.ApprovalLevels, "Value", "Text")) class="form-control"></select>
		</div>
	</div>
	<div class="form-group">
		<div class="form-check">
			@Html.CheckBoxFor(m => m.IsActive, new { @class = "skin-flat-blue" })
			<label class="form-check-label" for="IsActive">Active</label>
		</div>
	</div>
</div>
	<div class="col-12 col-md-9 col-lg-8 padding-bottom-30">
		<div class="text-left">
			<input type="submit" name="commit" value="Save" class="btn btn-primary" data-disable-with="Save">
			<a href="@Url.Action("List", "Designation")">
				<div type="button" class="btn">Cancel</div>
			</a>
		</div>
	</div>
	@*</form>*@
}