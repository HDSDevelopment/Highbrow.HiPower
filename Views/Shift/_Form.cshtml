@using Highbrow.HiPower.ViewModels.ShiftVM
@model ShiftAddUpdateViewModel

@{
	string view = ViewData["form_class"].ToString();
}
@using (Html.BeginForm(view, "Shift", FormMethod.Post, new { @class = "", enctype = "multipart/form-data", id = "form_Shift" }))
{
	@*<form id="form_Shift" action="/shifts/1" accept-charset="UTF-8" method="post" novalidate="novalidate">*@
	@Html.HiddenFor(m => m.Id)
	@Html.HiddenFor(m => m.CreatedAt)
<div class="col-12 col-md-9 col-lg-8">
	<div class="form-group">
		<label class="form-label" for="ShiftName">Name *</label>
		<span class="desc"></span>
		<div class="controls">
			@Html.EditorFor(m => m.ShiftName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Shift Name", type = "text" } })
		</div>
	</div>
	<div class="form-group hp-time">
		<label class="form-label" for="shift_start_time">Start Time *</label>
		<span class="desc"></span>
		<div class="controls">
			<select id="StartHour" asp-for="StartHour" asp-items=@(new SelectList(Model.TimeHourSelectItem, "Value", "Text")) class="form-control"></select> : 
			<select id="StartMinute" asp-for="StartMinute" asp-items=@(new SelectList(Model.TimeMinuteSelectItem, "Value", "Text")) class="form-control"></select>
		</div>
	</div>
	<div class="form-group hp-time">
		<label class="form-label" for="shift_end_time">End Time *</label>
		<span class="desc"></span>
		<div class="controls">
			<select id="EndHour" asp-for="EndHour" asp-items=@(new SelectList(Model.TimeHourSelectItem, "Value", "Text")) class="form-control"></select> : 
			<select id="EndMinute" asp-for="EndMinute" asp-items=@(new SelectList(Model.TimeMinuteSelectItem, "Value", "Text")) class="form-control"></select>
		</div>
	</div>
	<div class="form-group hp-time">
		<label class="form-label" for="shift_buffer_time">Buffer Time *</label>
		<span class="desc"></span>
		<div class="controls">
			<select id="BufferHour" asp-for="BufferHour" asp-items=@(new SelectList(Model.TimeHourSelectItem, "Value", "Text")) class="form-control"></select> : 
			<select id="BufferMinute" asp-for="BufferMinute" asp-items=@(new SelectList(Model.TimeMinuteSelectItem, "Value", "Text")) class="form-control"></select>
		</div>
	</div>
	<div class="form-group">
		<div class="form-check">
			@Html.CheckBoxFor(m => m.IsActive, new { @class = "skin-flat-blue" })
			<label class="form-check-label" for="IsActive">Active</label>
		</div>
	</div>
</div>
	<div class="col-12 col-md-9 col-lg-8 padding-bottom-30">
		<div class="text-left">
			<input type="submit" name="commit" value="Save" class="btn btn-primary" data-disable-with="Save">
			<a href="@Url.Action("List", "Shift")">
				<div type="button" class="btn">Cancel</div>
			</a>
		</div>
	</div>
	@*</form>*@
}