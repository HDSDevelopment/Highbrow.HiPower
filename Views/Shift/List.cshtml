														<i class="fa fa-edit"></i>
													</a>                              <a data-confirm="Are you sure?" class="btn btn-danger btn-xs" title="Delete" rel="nofollow" data-method="delete" href="/Shifts">
														<i class="fa fa-trash"></i>
													</a>
												</td>
											</tr>
										</tbody>
									</table>
								</div>
							</div>
							<div class="tab-pane fade" id="list_inactive">
								<div class="table-responsive">
									<table class="table table-striped dt-responsive display" cellspacing="0" width="100%">
