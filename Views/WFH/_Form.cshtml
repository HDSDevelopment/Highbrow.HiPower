
@{
	string view = ViewData["form_class"].ToString();
}
<form id="form_WFH" action="/WFH/1" accept-charset="UTF-8" method="post" novalidate="novalidate">
	<div class="col-12 col-md-9 col-lg-8">
		<div class="form-group">
			<label class="form-label">Name*</label>
			<span class="desc"></span>
			<div class="controls">
				<input class="form-control" type="text" id="wfh_day_name">
			</div>
		</div>
		<div class="form-group">
			<div class="form-check">
				<input class="form-check-input" type="checkbox" value="1" id="wfh_day_unlimited">
				<label class="form-check-label" for="wfh_day_unlimited">Unlimited Days</label>
			</div>
		</div>
		<div class="form-group unlimited">
			<label class="form-label" for="wfh_day_days">Days Per Month</label>
			<div class="controls">
				<input class="form-control" type="number" id="wfh_day_days">
			</div>
		</div>
		<div class="form-group">
			<div class="form-check">
				<input class="form-check-input" type="checkbox" value="1" checked="checked" id="wfh_day_active">
				<label class="form-check-label" for="wfh_day_active">Is Active</label>
			</div>
		</div>
	</div>
	<div class="col-12 col-md-9 col-lg-8 padding-bottom-30">
		<div class="text-left">
			<input type="submit" name="commit" value="Save" class="btn btn-primary" data-disable-with="Save">
				<a href="@Url.Action("List", "WFH")">
					<div type="button" class="btn">Cancel</div>
				</a>
		</div>
	</div>
</form>

