@using Highbrow.HiPower.Models
@model WFH
@{
	string view = ViewData["form_class"].ToString();
}
@using (Html.BeginForm(view, "WFH", FormMethod.Post, new { @class = "", enctype = "multipart/form-data", id = "form_WFH" }))
{
	@*<form id="form_WFH" action="/WFH/1" accept-charset="UTF-8" method="post" novalidate="novalidate">*@
	@Html.HiddenFor(m => m.Id)
	@Html.HiddenFor(m => m.CreatedAt)
<div class="col-12 col-md-9 col-lg-8">
	<div class="form-group">
		<label class="form-label" for="WFHName">Name *</label>
		<span class="desc"></span>
		<div class="controls">
			@Html.EditorFor(m => m.WFHName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter WHF Name", type = "text" } })
		</div>
	</div>
	<div class="form-group">
		<div class="form-check">
			@Html.CheckBoxFor(m => m.IsUnlimited, new { @class = "" })
			<label class="form-check-label" for="IsUnlimited">Unlimited Days</label>
			@*<label>
				<input type="checkbox" id="IsUnlimited" name="IsUnlimited" />
				Unlimited Days
			</label>*@
		</div>
	</div>
	<div class="form-group" id="DaysPerMonth_section">
		<label class="form-label" for="DaysPerMonth">Days Per Month</label>
		<span class="desc"></span>
		<div class="controls">
			@Html.EditorFor(m => m.DaysPerMonth, new { htmlAttributes = new { @class = "form-control", placeholder = "Days count", type = "number" } })
		</div>
	</div>
	<div class="form-group">
		<div class="form-check">
			@Html.CheckBoxFor(m => m.IsActive, new { @class = "skin-flat-blue" })
			<label class="form-check-label" for="IsActive">Active</label>
		</div>
	</div>
</div>
	<div class="col-12 col-md-9 col-lg-8 padding-bottom-30">
		<div class="text-left">
			<input type="submit" name="commit" value="Save" class="btn btn-primary" data-disable-with="Save">
			<a href="@Url.Action("List", "WFH")">
				<div type="button" class="btn">Cancel</div>
			</a>
		</div>
	</div>
	@*</form>*@
}

